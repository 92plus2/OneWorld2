<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    android:padding="10dp">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/profile_image"
        android:layout_width="132dp"
        android:layout_height="180dp"
        android:layout_centerHorizontal="true"
        android:src="@mipmap/ic_launcher" />

    <TextView
        android:id="@+id/username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/profile_image"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="10dp"
        android:paddingTop="0dp"
        android:textColor="#fff"
        android:textSize="24sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/Country"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/username"
        android:layout_marginEnd="33dp"
        android:layout_centerHorizontal="true"
        android:paddingEnd="28dp"
        android:paddingTop="10dp"
        android:textColor="@color/colorWhite"
        tools:visibility="visible" />

    <TextView
        android:id="@+id/Language"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/username"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:paddingTop="10dp"
        android:paddingEnd="28dp"
        android:textColor="@color/colorWhite"
        tools:visibility="visible" />

    <TextView
        android:layout_below="@id/Language"
        android:layout_above="@id/ok"
        android:id="@+id/aboutUser"
        android:layout_marginHorizontal="40dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="30dp"
        android:text="@string/no_biography"
        android:textColor="@color/colorWhite"
        android:textSize="20sp" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/img_online"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:layout_below="@id/username"
        android:layout_marginStart="-15dp"
        android:layout_marginTop="10dp"
        android:layout_toEndOf="@id/profile_image"
        android:src="@mipmap/ic_launcher"
        android:visibility="gone"
        app:civ_border_color="#05df29"
        app:civ_border_width="10dp" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/img_offline"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:layout_below="@id/username"
        android:layout_marginStart="-15dp"
        android:layout_marginTop="10dp"
        android:layout_toEndOf="@id/profile_image"
        android:src="@mipmap/ic_launcher"
        android:visibility="gone"
        app:civ_border_color="#bfbfbf"
        app:civ_border_width="10dp" />

    <TextView
        android:visibility="gone"
        android:id="@+id/last_msg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/username"
        android:layout_marginStart="20dp"
        android:layout_marginTop="5dp"
        android:layout_toEndOf="@id/profile_image"
        android:maxLines="1"
        android:paddingTop="5dp"
        android:textColor="@color/colorPrimaryDark" />

    <ImageView
        android:id="@+id/CountryImg"
        android:layout_width="22dp"
        android:layout_height="22dp"
        android:layout_below="@id/Country"
        android:layout_alignEnd="@id/Country"
        android:layout_alignParentEnd="false"
        android:layout_marginTop="-23dp"
        android:layout_marginEnd="0dp" />

    <ImageView
        android:id="@+id/LangImg"
        android:layout_width="22dp"
        android:layout_height="22dp"
        android:layout_below="@id/Language"
        android:layout_alignEnd="@id/Language"
        android:layout_alignParentEnd="false"
        android:layout_marginTop="-23dp"
        android:layout_marginEnd="0dp" />

    <ImageButton
        android:id="@+id/ok"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="50dp"
        android:background="@android:drawable/btn_star"
        android:scaleType="centerCrop" />
</RelativeLayout>