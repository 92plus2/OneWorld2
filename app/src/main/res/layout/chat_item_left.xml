<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorPrimary"
    android:padding="8dp">

    <RelativeLayout
        android:id="@+id/messageLayout"
        android:layout_width="292dp"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="false"
        android:background="@color/colorPrimary"
        android:padding="8dp">

        <RelativeLayout
            android:id="@+id/testr"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/profile_image"
            android:layout_marginLeft="35dp"
            android:background="@drawable/background_left">

            <TextView
                android:id="@+id/clickPlusToTranslate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/show_message"
                android:layout_alignParentEnd="false"
                android:layout_centerInParent="true"
                android:gravity="center"
                android:maxEms="8"
                android:paddingLeft="8dp"
                android:paddingBottom="8dp"
                android:paddingRight="8dp"
                android:singleLine="false"
                android:text="click + to translate"
                android:textColor="@color/colorblack"
                android:textIsSelectable="true"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/show_message"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/background_left"
                android:gravity="center"
                android:maxEms="8"
                android:paddingLeft="8dp"
                android:paddingTop="8dp"
                android:paddingRight="8dp"
                android:textColor="#000000"
                android:textIsSelectable="true"
                android:textSize="18sp" />

        </RelativeLayout>

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/profile_image"
            android:layout_width="35dp"
            android:layout_height="32dp"
            android:src="@mipmap/ic_launcher" />

        <TextView
            android:id="@+id/time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@id/testr"
            android:layout_toEndOf="@id/testr"
            android:gravity="bottom"
            android:padding="8dp"
            android:text="hello"
            android:textColor="#fff"
            android:textSize="18sp" />
        <TextView
            android:id="@+id/txt_seen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone" />


    </RelativeLayout>

    <Button
        android:id="@+id/plus"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignParentRight="true"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/background_plus"
        android:text="+" />

    <RelativeLayout
        android:id="@+id/photoLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/messageLayout"
        android:layout_marginStart="40dp"
        android:background="@drawable/background_left">

        <ImageView
            android:id="@+id/message_photo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"

            android:padding="10dp"
            android:visibility="gone" />
    </RelativeLayout>

</RelativeLayout>